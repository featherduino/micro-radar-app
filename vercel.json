{
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "dashboard/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/(.*)", "dest": "/dashboard/$1" }
  ],
  "env": {
    "DATABASE_URL": "@database_url",
    "NODE_ENV": "production"
  }
}
